<h2 class="text-center">Bảng điểm cá nhân</h2>
<hr class="bg-success" />
<br />

<div class="container">
    <h4 class="text-center bg-info text-white">Bảng điểm sinh viên</h4>
    <hr class="bg-success" />
    <br />

    <table class="table table-hover table-bordered  ">
        <thead class="bg-primary text-white ">
            <tr>
                <th>Học kỳ</th>
                <th>Mã HP</th>
                <th>Tên Học Phần</th>
                <th>TC</th>
                
                <th>Điểm QT</th>
                <th>Điểm thi</th>
                <th>Điểm Trung Bình</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Semester.Name</th>
                    <th>@item.Semester.Code</th>
                    <th>@item.Subjects.Name</th>
                    <th>@item.Subjects.Credits</th>

                    <th>@item.MarkMidTerm</th>
                    <th>@item.MarkFinalExam</th>
                    <th>
                        <a id="result"></a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
    <h4 class="text-center bg-info text-white">Kết quả bảng điểm sinh viên</h4>
    <hr class="bg-success" />

    <table class="table table-hover table-bordered  ">
        <thead class="bg-primary text-white ">
            <tr>
                <th>Học kỳ</th>
                <th>GPA</th>
                <th>CPA</th>
                <th>TC qua</th>
                <th>TC Tích lũy</th>
                <th>TC nợ ĐK</th>
                <th>TC ĐK</th>
                <th>Trình độ</th>
                <th>Mức CC</th>
                <th>Thiếu điểm</th>

            </tr>

        </thead>
        <tbody>

            <tr>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
                <th>hello</th>
            </tr>

        </tbody>
    </table>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $('#linky').click(function AverageMark(MarkMidTerm, MarkFinalExam, RateMidTerm, RateFinalExam)
    {
        $.ajax({
            type: "Get",
            url: "@Url.Action("AverageMark")",
            data: { MarkMidTerm: MarkMidTerm, MarkFinalExam: MarkFinalExam, RateMidTerm: RateMidTerm, RateFinalExam: RateFinalExam},
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            
            success: function (msg) {
               
                $("#result").show(msg);
            
               
            },
            error: function (req, status, error) {
                alert(error);
            }
        });
    }
    );
</script>